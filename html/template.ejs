  <div class="mdl-layout__drawer">
    <nav class="mdl-navigation">
<% index.forEach(function(idx, i) { %>
      <a class="mdl-navigation__link<%= i == si ? ' highlighted-menu' : '' %>" href="<%=idx.path%>"><% if(idx.cname == '') {%>&nbsp;&nbsp;&nbsp;&nbsp;<%}%><b><%=idx.sec%></b> <%=idx.name%></a>
<% }); %>
    </nav>
  </div>
  <main class="mdl-layout__content">
    <div class="page-content">
        <div class="mdl-grid">
           <div class="mdl-layout-spacer"></div>
           <div class="mdl-cell mdl-cell--6-col">
                <%- render %>
           </div>
           <div class="mdl-layout-spacer"></div>
        </div>
        <div class="mdl-grid">
           <div class="mdl-layout-spacer"></div>
           <div class="mdl-cell mdl-cell--4-col"></div>
           <div class="mdl-cell mdl-cell--2-col" style="text-align: right">
                <% if(si == 0) { %>
                <button class="mdl-button mdl-js-button mdl-button--raised" disabled>
                    Previous
                </button>
                <% } else { %>
                <button class="mdl-button mdl-js-button mdl-button--raised" onclick="location.href='<%=index[si - 1].path%>';">
                    Previous
                </button>
                <% } %>
                <% if(si == index.length - 1) { %>
                <button class="mdl-button mdl-js-button mdl-button--fab mdl-button--colored" disabled>
                    <i class="material-icons">arrow_forward</i>
                </button>
                <% } else { %>
                <button class="mdl-button mdl-js-button mdl-button--fab mdl-button--colored" onclick="location.href='<%=index[si + 1].path%>';">
                    <i class="material-icons">arrow_forward</i>
                </button>
                <% } %>
            </div>
           <div class="mdl-layout-spacer"></div>
        </div>
    </div>
  </main>
</div>
</body>
